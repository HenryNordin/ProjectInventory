<Window x:Class="ProjectInventory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectInventory"
        mc:Ignorable="d"
        Title="Inventory Manager" 
        Height="720" Width="640"
        MinHeight="500" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Background="#FF292929">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Item Manager"
                   Grid.Row="0"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0 0 0 20"
                   Foreground="White"/>

        <Grid Grid.Row="1" Margin="0 0 0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0 0 10 0">
                <Label x:Name="lblName"
                       Content="Item name"
                       Foreground="White"
                       Margin="0 0 0 2"/>
                <TextBox x:Name="txtName"
                         Height="35"
                         VerticalContentAlignment="Center"
                         Padding="8,5"
                         Text="Item Name"
                         HorizontalAlignment="Stretch"
                         MinWidth="80"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="0 0 10 0">
                <Label x:Name="lblDescription"
                       Content="Description"
                       Foreground="White"
                       Margin="0 0 0 2"/>
                <TextBox x:Name="txtDescription"
                         Height="65"
                         VerticalContentAlignment="Top"
                         Padding="8,5"
                         Text="Description"
                         HorizontalAlignment="Stretch"
                         MinWidth="150"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>

            <Button x:Name="btnAdd"
                    Content="Add"
                    Width="80"
                    Height="35"
                    Margin="0 0 10 0"
                    Padding="5"
                    Click="btnAdd_Click"
                    Grid.Column="2"/>

            <Button x:Name="btnDelete"
                    Content="Delete"
                    Width="80"
                    Height="35"
                    Padding="5"
                    Click="btnDelete_Click"
                    Grid.Column="3"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="5"
                        Background="#FF1E1E1E"
                        Padding="5">
                    <ListBox x:Name="lstItems"
                             d:ItemsSource="{d:SampleData ItemCount=10}"
                             Foreground="White"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="5"
                             FontSize="14"
                             SelectionChanged="lstItems_SelectionChanged"/>
                </Border>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 10 0 0" HorizontalAlignment="Left">
                    <Button x:Name="btnLoad"
                            Content="Load"
                            Width="80"
                            Height="35"
                            Margin="0 0 10 0"
                            Padding="5"
                            Click="btnLoad_Click"/>
                    <Button x:Name="btnSave"
                            Content="Save"
                            Width="80"
                            Height="35"
                            Padding="5"
                            Click="btnSave_Click"/>
                </StackPanel>
            </Grid>

            <Border Grid.Column="1"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Background="#FF1E1E1E"
                    Padding="5">
                <TextBox x:Name="TxtBoxInfo"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Padding="8,5"
                         Foreground="White"
                         Background="Transparent"/>
            </Border>
        </Grid>
    </Grid>
</Window>